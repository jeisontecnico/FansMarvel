<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    android:background="@color/colorPrimary"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageThumbChars"
        android:layout_width="@dimen/character_item_image_width"
        android:layout_height="@dimen/character_item_image_height"
        android:layout_marginStart="@dimen/character_item_image_bottom_margin"
        android:layout_marginTop="@dimen/character_item_image_bottom_margin"
        android:layout_marginBottom="@dimen/character_item_image_bottom_margin"
        app:srcCompat="@drawable/ic_marvel" />


    <TextView
        android:id="@+id/textChars"
        android:layout_width="@dimen/character_item_name_width"
        android:layout_height="@dimen/character_item_name_height"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="@dimen/character_item_name_start_margin"
        android:layout_marginTop="@dimen/character_item_name_top_margin"
        android:layout_marginEnd="@dimen/character_item_name_end_margin"
        android:layout_toEndOf="@+id/imageThumbChars"
        android:text="@string/default_text"
        android:textColor="@color/textColor"
        android:textStyle="bold" />

</RelativeLayout>